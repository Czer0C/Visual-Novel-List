{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
    ,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@partial/*": ["components/partial/*"],
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx", 
    "pages/api/visualnovels.ts", "pages/index.tsx", "postcss.config.js", "tailwind.config.js" ],
  "exclude": [
    "node_modules"
  ]
}
